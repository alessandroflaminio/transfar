<Window x:Class="Transfar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Transfar" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="discoveryButton" Content="Send file..." HorizontalAlignment="Left" Margin="32,279,0,0" VerticalAlignment="Top" Width="109" Click="DiscoveryButton_Click"/>
        <CheckBox x:Name="availabilityCheckbox" Content="Public mode" HorizontalAlignment="Left" Margin="378,282,0,0" VerticalAlignment="Top" Checked="AvailabilityCheckbox_Checked" Unchecked="AvailabilityCheckbox_Unchecked" ToolTip="By checking this box you become visible to other hosts that want to send files via Transfar."/>
        <Image Margin="10,116,10,114" Source="Logo.png" Stretch="Fill" RenderOptions.BitmapScalingMode="Fant"/>
        <Button x:Name="settingsButton" Margin="0,25,25,0" VerticalAlignment="Top" Click="Settings_Button_Click" Height="45" HorizontalAlignment="Right" Width="45">
            <Image Height="36" Source="appbar.settings.png" Stretch="Uniform" Width="36"/>
        </Button>
        <Image Margin="477,195,10,97.5" Source="Icon.png" Stretch="Fill" RenderOptions.BitmapScalingMode="Fant" RenderTransformOrigin="1.781,1.167" />
    </Grid>
</Window>