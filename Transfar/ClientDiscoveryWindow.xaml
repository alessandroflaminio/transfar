<Window x:Class="Transfar.ClientDiscoveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transfar"
        mc:Ignorable="d"
        Title="ClientDiscoveryWindow" Height="300" Width="300" Closing="Window_Closing">
    <Grid>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="25" Margin="10,184,0,0" VerticalAlignment="Top" Width="272"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="10,229,0,0" VerticalAlignment="Top" Width="75" Click="startButton_Click"/>
        <Button x:Name="stopButton" Content="Stop" HorizontalAlignment="Left" Margin="100,229,0,0" VerticalAlignment="Top" Width="75" Click="stopButton_Click" IsEnabled="False"/>
        <ListBox x:Name="clientsListBox" HorizontalAlignment="Left" Height="162" Margin="10,10,0,0" VerticalAlignment="Top" Width="272" SelectionChanged="clientsListBox_SelectionChanged"/>
        <Button x:Name="sendButton" Content="Send file..." HorizontalAlignment="Left" Margin="207,229,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="sendButton_Click"/>

    </Grid>
</Window>
